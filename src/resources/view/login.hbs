<div class="loginPage">
   {{#if announce}}<div
      aria-live="polite"
      aria-atomic="true"
      class="toast-container"
    >
      <div class="toast" id="alert">
        <div class="toast-header toast-container-header">
          <small>Thông Tin Đăng Kí Chưa Hợp Lê</small>
          <button type="button" data-dismiss="toast" aria-label="Close">
            X
          </button>
        </div>
        <div class="toast-body toast-container-body">
          <p>{{message}}</p>
        </div>
      </div>
    </div>{{/if}}
  <div class="login">
    <form action="/login" method="post">
      <div class="login-title">
        <h1>Đăng Nhập</h1>
      </div>
      <hr />
      <div class="login-txtInput">
        
        <input
          type="email"
          id="username"
          name="username"
          class="login-form-input"
        /><label class="label-input" for="username">Tên Đăng Nhập </label>
      </div>
      <!-- Password input -->
      <div class="login-txtInput">
      
        <input
          type="password"
          id="password"
          name="password"
          class="login-form-input"
        />
 <label  class="label-input" for="password">Mật Khẩu</label>
      </div>

      
       
<div class="login-social">
  <a class="link1"> <i class="bi bi-google "></i></a>
  <a class="link2"> <i class="bi bi-facebook "></i></a>
  <a class="link3"> <i class="bi bi-linkedin"></i></a>
  <a class="link3"><i class="bi bi-github"></i></a>
 
 
 
  
</div>
      <div class="login-bottom">
        <button class="login-btnsubmit"
          type="submit"
          style="padding-left: 2.5rem; padding-right: 2.5rem;"
        ><i class="bi bi-arrow-right"></i></button>
      
          <a class="login-btnlink" href="/register">Đăng kí tài khoản</a></p>
          <a class="login-btnlink" href="/resetpassword">Quên Mật Khẩu</a>
      </div>

    </form>
  </div>
</div>

