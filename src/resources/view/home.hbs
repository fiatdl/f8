<div class="home">
  {{#each data}}
    <div class="cardd">
   <div class="cardd-title">
      
        <p>{{this.title}}</p>
      </div>
    <div class="cardd-description"><p >{{this.description}}</p></div>
      
      <div class="cardd-img"> <img src="img/post/{{this.src}}" /></div>
     
  
        <div class="cardd-author">

        <button class="card-btn-like">like</button>
      <a class="card-link-comment">comment</a></div>
       <p>{{this.author}}</p> 
   
      </div>

  {{/each}}

{{#if loginAnnounce}}
    <!-- Then put toasts within -->
    <div class="toast home-loginToast" role="alert" aria-live="assertive" aria-atomic="true" id="alert">
      <div class="toast-header">
     
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
      {{loginAnnounce}}
      </div>
    </div>
    {{/if}}
{{#if update}}
    <div class="toast home-announceToast" role="alert" aria-live="assertive" aria-atomic="true" id="alert2">
      <div class="toast-header">
      
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
      {{updateAnnounce}}
      </div>
    </div>
  </div>
{{/if}}
<script>
   $(document ).ready(function() {
  $("#alert").toast({animation:true,delay:100000}); $("#alert").toast("show");
   $("#alert2").toast({animation:true,delay:100000}); $("#alert2").toast("show");
  });
</script>