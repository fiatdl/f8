<div class="home">
  {{#each data}}
    <div class="card">
      <div class="card-avatar">
        <img src="img/user/{{this.authorAvatar}}"
        <p class="card-author">{{this.author}}</p>
      </div>
    
      <h3 class="card-description">{{this.description}}</h3>
      <img class="card-img" src="img/post/{{this.src}}" />
      {{!-- <p class="home-card-description">{{this.description}} --}}
        <div class="card-bottom"></p><button class="card-btn-like">like</button>
      <a class="card-link-comment">comment</a></div>
      
      </div>

  {{/each}}

{{#if loginAnnounce}}
    <!-- Then put toasts within -->
    <div class="toast home-loginToast" role="alert" aria-live="assertive" aria-atomic="true" id="alert">
      <div class="toast-header">
     
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
      {{loginAnnounce}}
      </div>
    </div>
    {{/if}}
{{#if update}}
    <div class="toast home-announceToast" role="alert" aria-live="assertive" aria-atomic="true" id="alert2">
      <div class="toast-header">
      
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
      {{updateAnnounce}}
      </div>
    </div>
  </div>
{{/if}}
<script>
   $(document ).ready(function() {
  $("#alert").toast({animation:true,delay:100000}); $("#alert").toast("show");
   $("#alert2").toast({animation:true,delay:100000}); $("#alert2").toast("show");
  });
</script>